<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat"
            android:text="Please enter your marks (10th)"
            android:textColor="@color/greenSuccess"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:fontFamily="@font/montserrat"
            android:text="Enter the marks for First Language"
            android:textColor="@color/greenSuccess"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/firstlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:hint="First language marks (Eg : 75) between 0 to 100"
                    android:inputType="number"
                    android:paddingLeft="26dp"
                    android:paddingTop="15.44dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15.31dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BCBCBC"
                    android:textSize="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:fontFamily="@font/montserrat"
            android:text="Enter the marks for Second Language"
            android:textColor="@color/greenSuccess"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="31dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/secondlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Second language marks (Eg : 75) between 0 to 100"
                    android:fontFamily="@font/montserrat"
                    android:inputType="number"
                    android:paddingLeft="26dp"
                    android:paddingTop="15.44dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15.31dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BCBCBC"
                    android:textSize="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:fontFamily="@font/montserrat"
            android:text="Enter the marks for Science"
            android:textColor="@color/greenSuccess"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="31dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/science"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Science marks (Eg : 75) between 0 to 100"
                    android:fontFamily="@font/montserrat"
                    android:inputType="number"
                    android:paddingLeft="26dp"
                    android:paddingTop="15.44dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15.31dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BCBCBC"
                    android:textSize="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:fontFamily="@font/montserrat"
            android:text="Enter the marks for Social Science"
            android:textColor="@color/greenSuccess"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="31dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/socialsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Social Science marks (Eg : 75) between 0 to 100"
                    android:fontFamily="@font/montserrat"
                    android:inputType="number"
                    android:paddingLeft="26dp"
                    android:paddingTop="15.44dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15.31dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BCBCBC"
                    android:textSize="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:fontFamily="@font/montserrat"
            android:text="Enter the marks for Mathematics"
            android:textColor="@color/greenSuccess"
            android:textSize="10sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="31dp"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/maths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mathematics marks (Eg : 75) between 0 to 100"
                    android:fontFamily="@font/montserrat"
                    android:inputType="number"
                    android:paddingLeft="26dp"
                    android:paddingTop="15.44dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15.31dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#BCBCBC"
                    android:textSize="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_predict"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingTop="8.7dp"
            android:fontFamily="@font/montserrat"
            android:paddingBottom="8.71dp"
            android:textColor="#fff"
            android:text="Predict Stream"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12sp" />


        <TextView
        android:id="@+id/textView_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:text="This consist of subjects of CBSE as of now for prototyping."
        android:textSize="10sp" />


    </LinearLayout>





    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>